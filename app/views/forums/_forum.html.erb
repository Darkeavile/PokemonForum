<div class="row hoverDiv">
  <div class="col-sm-10"><h4><%= link_to forum.title, category_forum_path(forum.category, forum) %></h4></div>
  <div class="col-sm-2">Latest Post</div>
  </div>

<% if(params[:controller] == 'admin')  %>
	<%= link_to 'Edit Forum', edit_category_forum_path(forum.category, forum), class: "btn btn-default" %>
	<%= link_to 'Delete Forum', category_forum_path(forum.category, forum), method: :delete, class: "btn btn-default" %>
<% end %>